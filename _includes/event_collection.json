{
    {% if page.support_paging == false -%}
        {% assign page_size = 100 -%}
        {% assign current_page = 1 -%}
        {% assign for_offset = 0 -%}
    {% else -%}
        {% assign page_size = site.pagination.page_size | default: 15 -%}
        {% assign current_page = page.page | default: 1 -%}
        {% assign for_offset = current_page | minus:1 | times:page_size -%}
    {% endif -%}
    {% assign for_count = 0 -%}
    "title": {{ page.title | default: "Events" | jsonify }},
    "path": {{ page.path | jsonify }},
    "page": {{ current_page }},
    "value": [
        {% if page.items -%}
            {% comment -%}Waiting for jekyll 4 in GitHub Pages to support item.path=... or item.path=...{% endcomment -%}
            {% assign events = "" | split: ',' -%}
            {% for item_id in page.items -%}
                {% assign item_path = item_id | prepend: "_events/" | append: ".md" -%}
                {% assign event = site.events | where: "path", item_path | first -%}
                {% if event -%}
                    {% assign events = events | push: event -%}
                {% endif -%}
            {% endfor -%}
        {% else -%}
            {% assign events_cutoff_timestamp = site.time | date: "%s" | minus: 0 -%}
            {% if page.query -%}
                {% assign events_where_exp = page.query -%}
            {% else -%}
                {% capture events_where_exp %}item.topics contains '{{ page.topic | default: site.topic }}'{% endcapture -%}
            {% endif -%}
            {% assign events = site.events | where_exp: "item", events_where_exp -%}
            {% if page.time_range == "past" -%}
                {% assign events = events | sort: "startDateTime" | reverse -%}
            {% else -%}
                {% assign events = events | sort: "startDateTime" -%}
            {% endif -%}
        {% endif -%}
        {% for item in events limit:page_size offset:for_offset -%}
            {% if forloop.last -%}
                {% assign for_count = forloop.length -%}
            {% endif -%}
            {% if page.time_range == "past" -%}
                {% assign event_timestamp = item.endDateTime | date: "%s" | minus: 0 -%}
                {% if event_timestamp >= events_cutoff_timestamp -%}
                    {% continue -%}
                {% endif -%}
            {% elsif page.time_range == "future" -%}
                {% assign event_timestamp = item.endDateTime | date: "%s" | minus: 0 -%}
                {% if event_timestamp < events_cutoff_timestamp -%}
                    {% continue -%}
                {% endif -%}
            {% endif -%}
        {
            "path": {{ item.path | jsonify }},
            "type": {{ item.type | jsonify }},
            "sourceUrl": "{{ item.url | absolute_url }}",
            "heat": {{ item.heat | default: 0 }},
            {% if item.type != "collection" -%}
            "webUrl": "{{ item.website | absolute_url }}",
            "name": {{ item.name | jsonify }},
            "excerpt": {{ item.excerpt | strip_html | normalize_whitespace | strip | jsonify }},
            {% if item.website -%}
            "website": "{{ item.website | absolute_url }}",
            {% endif -%}
            "startDateTime": {{ item.startDateTime | jsonify }},
            "endDateTime": {{ item.endDateTime | jsonify }},
            "location": {{ item.location | jsonify }},
            {% else -%}
            "webUrl": "{{ site.webUrl }}{{ item.path | replace: '_events/','/events?id=' | replace: '.md','' }}",
            "title": {{ item.title | jsonify }},
            "excerpt": {{ item.excerpt | strip_html | normalize_whitespace | strip | jsonify }},
            "topItems": [
            {% if item.items -%}
                {% assign child_items = "" | split: ',' -%}
                {% for child_item_id in item.items -%}
                    {% assign child_item_path = child_item_id | prepend: "_events/" | append: ".md" -%}
                    {% assign child_item = site.events | where: "path", child_item_path | first -%}
                    {% if child_item -%}
                        {% assign child_items = child_items | push: child_item -%}
                    {% endif -%}
                {% endfor -%}
            {% else -%}
                {% assign child_items = site.events | where_exp: "item", item.query -%}
            {% endif -%}
            {% for child_item in child_items -%}
                {
                    "path": {{ child_item.path | jsonify }},
                    "type": {{ child_item.type | jsonify }},
                    "sourceUrl": "{{ child_item.url | absolute_url }}",
                    {% if child_item.type == "collection" -%}
                    "title": {{ child_item.title | jsonify }},
                    "webUrl": "{{ site.webUrl }}{{ child_item.path | replace: '_events/','/events?id=' | replace: '.md','' }}",
                    {% else -%}
                    "name": {{ child_item.name | jsonify }},
                    "webUrl": "{{ child_item.website | absolute_url }}",
                    {% endif -%}
                    "heat": {{ child_item.heat | default: 0 }},
                    "excerpt": {{ child_item.excerpt | strip_html | normalize_whitespace | strip | jsonify }},
                    "startDateTime": {{ child_item.startDateTime | jsonify }},
                    "endDateTime": {{ child_item.endDateTime | jsonify }},
                    "images": [
                        {% for image in child_item.images -%}
                        {
                            "width": {{ image.width | default: 0 }},
                            "height": {{ image.height | default: 0 }},
                            "quality": {{ image.quality | default: 100 }},
                            "url": "{{ image.url | absolute_url }}",
                            "attribution": {{ image.attribution | jsonify }},
                            "title": {{ image.title | jsonify }}
                        }{% unless forloop.last -%},{% endunless %}
                        {% endfor %}
                    ],
                    "topics": {{ child_item.topics | jsonify }}
                }{% unless forloop.last -%},{% endunless %}
            {% endfor %}
            ],
            "size": {{ child_items | size }},
            {% endif -%}
            {% if item.provider -%}
            "provider": {
                {% if item.provider.domain -%}
                "domain": "{{ item.provider.domain }}",
                {% endif -%}
                {% if item.provider.images -%}
                "images": [
                    {% for image in item.provider.images -%}
                    {
                        "url": "{{ image.url | absolute_url }}",
                        "width": {{ image.width | default: 0 }},
                        "height": {{ image.height | default: 0 }}
                    }{% unless forloop.last -%},{% endunless %}
                    {% endfor %}
                ],
                {% endif -%}
                {% if item.provider.publishers -%}
                "publishers": [
                    {% for publisher in item.provider.publishers -%}
                    {
                        {% if publisher.domain -%}
                        "domain": "{{ publisher.domain }}",
                        {% endif -%}
                        "name": {{ publisher.name | jsonify }}
                    }{% unless forloop.last -%},{% endunless %}
                    {% endfor %}
                ],
                {% endif -%}
                "name": {{ item.provider.name | jsonify }}
            },
            {% endif -%}
            "images": [
                {% for image in item.images -%}
                {
                    "width": {{ image.width | default: 0 }},
                    "height": {{ image.height | default: 0 }},
                    "quality": {{ image.quality | default: 100 }},
                    "url": "{{ image.url | absolute_url }}",
                    "attribution": {{ image.attribution | jsonify }},
                    "title": {{ image.title | jsonify }}
                }{% unless forloop.last -%},{% endunless %}
                {% endfor %}
            ],
            "topics": {{ item.topics | jsonify }}
        }{% unless forloop.last -%},{% endunless %}
        {% endfor %}
    ],
    {% if page.support_paging == false or for_count < page_size or current_page == 9 -%}
    "nextPage": null
    {% else -%}
    "nextPage": "{{ current_page | plus:1 }}"
    {%- endif %}
}
